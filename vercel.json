{
  "version": 2,
  "builds": [
    {
      "src": "api/index_py.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9" 
      }
    },
    {
      "src": "publico/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "publico" }
    }
  ],
  "routes": [
    {
      "src": "/",                 
      "dest": "/publico/index_html.html" 
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index_py.py"
    },
    {
      "src": "/(.*)",
      "dest": "/publico/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9.13" 
  }
}
